<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %> - Cricket Auction System</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <div class="container py-4">
    <div class="row mb-4">
      <div class="col-lg-8">
        <div class="d-flex align-items-center gap-3">
          <img src="<%= team.logo %>" alt="<%= team.name %>" class="rounded-circle border border-3 border-primary" style="width: 90px; height: 90px; object-fit: cover;">
          <div>
            <h2 class="fw-bold text-primary mb-1"><i class="bi bi-shield-shaded me-2"></i><%= team.name %></h2>
            <span class="badge bg-secondary me-2">Owner: <%= team.owner %></span>
            <span class="badge bg-info text-dark me-2">Budget: ₹<%= team.budget.toLocaleString() %></span>
            <span class="badge bg-success">Players: <%= team.players ? team.players.length : 0 %></span>
          </div>
        </div>
      </div>
      <div class="col-lg-4 d-flex justify-content-lg-end align-items-center mt-3 mt-lg-0">
        <a href="/admin/teams/<%= team._id %>/download-excel" class="btn btn-success btn-lg shadow">
          <i class="bi bi-file-earmark-excel"></i> Download Team Excel
        </a>
      </div>
    </div>
    <div class="row mb-4">
      <div class="col-md-6 mb-3 mb-md-0">
        <div class="card shadow-sm h-100">
          <div class="card-body">
            <h5 class="fw-bold mb-3 text-primary">Team Info</h5>
            <ul class="list-group list-group-flush">
              <li class="list-group-item"><strong>Owner:</strong> <%= team.owner %></li>
              <li class="list-group-item"><strong>Budget:</strong> ₹<%= team.budget.toLocaleString() %></li>
              <li class="list-group-item"><strong>User:</strong> <%= team.user ? team.user.username : '-' %></li>
              <li class="list-group-item"><strong>Email:</strong> <%= team.ownerEmail || '-' %></li>
              <li class="list-group-item"><strong>Phone:</strong> <%= team.ownerPhone || '-' %></li>
            </ul>
          </div>
        </div>
      </div>
      <div class="col-md-6">
        <div class="card shadow-sm h-100">
          <div class="card-body">
            <h5 class="fw-bold mb-3 text-primary">Team Stats</h5>
            <ul class="list-group list-group-flush">
              <li class="list-group-item"><strong>Total Players:</strong> <%= team.players ? team.players.length : 0 %></li>
              <li class="list-group-item"><strong>Budget per Player:</strong> ₹<%= team.players && team.players.length ? Math.round(team.budget / team.players.length).toLocaleString() : 0 %></li>
            </ul>
          </div>
        </div>
      </div>
    </div>
    <div class="card shadow-sm">
      <div class="card-body">
        <h5 class="fw-bold mb-3 text-primary">Assigned Players</h5>
        <% if (team.players && team.players.length) { %>
          <div class="table-responsive">
            <table class="table table-bordered table-hover align-middle">
              <thead class="table-light">
                <tr>
                  <th>Name</th>
                  <th>Role</th>
                </tr>
              </thead>
              <tbody>
                <% team.players.forEach(player => { %>
                  <tr>
                    <td class="fw-bold"><%= player.name %></td>
                    <td><span class="badge bg-info text-dark"><%= player.role %></span></td>
                  </tr>
                <% }) %>
              </tbody>
            </table>
          </div>
        <% } else { %>
          <div class="alert alert-warning">No players assigned to this team.</div>
        <% } %>
      </div>
    </div>
  </div>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
