<div class="row">
  <div class="col-md-12">
    <div class="card mb-4">
      <div class="card-header bg-primary text-white">
        <div class="d-flex justify-content-between align-items-center">
          <h4><%= team.name %></h4>
          <span>Owner: <%= team.owner %></span>
        </div>
      </div>
      <div class="card-body">
        <div class="row">
          <div class="col-md-4 text-center">
            <img src="<%= team.logo %>" alt="<%= team.name %>" class="img-fluid rounded mb-3" style="max-width: 150px;">
          </div>
          <div class="col-md-8">
            <div class="row">
              <div class="col-md-6">
                <div class="card bg-success text-white mb-3">
                  <div class="card-body">
                    <h5 class="card-title">Budget</h5>
                    <p class="card-text fs-3">₹<%= team.budget.toLocaleString() %></p>
                  </div>
                </div>
              </div>
              <div class="col-md-6">
                <div class="card bg-info text-white mb-3">
                  <div class="card-body">
                    <h5 class="card-title">Players</h5>
                    <p class="card-text fs-3"><%= team.players.length %></p>
                  </div>
                </div>
              </div>
            </div>
            
            <div class="mt-3">
              <a href="/team/auction" class="btn btn-warning btn-lg">
                <i class="bi bi-hammer"></i> Go to Auction
              </a>
              <a href="/team/players" class="btn btn-primary btn-lg ms-2">
                <i class="bi bi-people"></i> View Players
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <div class="card mb-4">
      <div class="card-header bg-success text-white">
        <h5>Your Players</h5>
      </div>
      <div class="card-body">
        <% if (team.players.length > 0) { %>
          <div class="table-responsive">
            <table class="table table-striped">
              <thead>
                <tr>
                  <th>Name</th>
                  <th>Role</th>
                  <th>Price</th>
                  <th>Stats</th>
                </tr>
              </thead>
              <tbody>
                <% team.players.forEach(player => { %>
                  <tr>
                    <td><%= player.name %></td>
                    <td><%= player.role %></td>
                    <td>₹<%= player.currentBid.toLocaleString() %></td>
                    <td>
                      <small>
                        M: <%= player.stats.matches %>, 
                        R: <%= player.stats.runs %>, 
                        W: <%= player.stats.wickets %>
                      </small>
                    </td>
                  </tr>
                <% }); %>
              </tbody>
            </table>
          </div>
        <% } else { %>
          <div class="text-center py-5">
            <h5>No players in your team</h5>
            <p class="text-muted">Participate in the auction to buy players</p>
            <a href="/team/auction" class="btn btn-primary">Go to Auction</a>
          </div>
        <% } %>
      </div>
    </div>
  </div>
</div>