<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %> - Cricket Auction System</title>
  
  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <!-- Bootstrap Icons -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
  <!-- Custom CSS -->
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <!-- Navigation -->
  <nav class="navbar navbar-expand-lg navbar-light sticky-top">
    <div class="container-fluid">
      <a class="navbar-brand d-flex align-items-center" href="/">
        <i class="bi bi-trophy-fill me-2"></i>
        <span class="fw-bold">Cricket Auction</span>
      </a>
      
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav me-auto mb-2 mb-lg-0">
          <% if (user && user.role === 'admin') { %>
            <li class="nav-item"><a class="nav-link <%= title === 'Admin Dashboard' ? 'active' : '' %>" href="/admin/dashboard"><i class="bi bi-speedometer2 me-1"></i> Dashboard</a></li>
            <li class="nav-item"><a class="nav-link <%= title === 'Players Management' ? 'active' : '' %>" href="/admin/players"><i class="bi bi-people me-1"></i> Players</a></li>
            <li class="nav-item"><a class="nav-link <%= title === 'Teams Management' ? 'active' : '' %>" href="/admin/teams"><i class="bi bi-shield-shaded me-1"></i> Teams</a></li>
            <li class="nav-item"><a class="nav-link <%= title === 'Auction Control' ? 'active' : '' %>" href="/admin/auction"><i class="bi bi-hammer me-1"></i> Auction</a></li>
          <% } else if (user && user.role === 'team') { %>
            <li class="nav-item"><a class="nav-link <%= title === 'Team Dashboard' ? 'active' : '' %>" href="/team/dashboard"><i class="bi bi-speedometer2 me-1"></i> Dashboard</a></li>
            <li class="nav-item"><a class="nav-link <%= title === 'Available Players' ? 'active' : '' %>" href="/team/players"><i class="bi bi-people me-1"></i> Players</a></li>
            <li class="nav-item"><a class="nav-link <%= title === 'Live Auction' ? 'active' : '' %>" href="/team/auction"><i class="bi bi-hammer me-1"></i> Auction</a></li>
          <% } else { %>
            <li class="nav-item"><a class="nav-link <%= title === 'Home' ? 'active' : '' %>" href="/"><i class="bi bi-house me-1"></i> Home</a></li>
            <li class="nav-item"><a class="nav-link" href="/team/players"><i class="bi bi-people me-1"></i> Players</a></li>
            <li class="nav-item"><a class="nav-link" href="/team/auction"><i class="bi bi-hammer me-1"></i> Auction</a></li>
          <% } %>
        </ul>
        
        <ul class="navbar-nav">
          <% if (user) { %>
              <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle d-flex align-items-center" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown">
                  <i class="bi bi-person-circle me-1"></i>
                  <%= user.username %>
                </a>
                <ul class="dropdown-menu dropdown-menu-end">
                  <li><a class="dropdown-item" href="/auth/logout">
                    <i class="bi bi-box-arrow-right me-2"></i> Logout
                  </a></li>
                </ul>
              </li>
          <% } else { %>
              <li class="nav-item">
                <a class="nav-link" href="/auth/login">
                  <i class="bi bi-box-arrow-in-right me-1"></i> Login
                </a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/auth/register">
                  <i class="bi bi-person-plus me-1"></i> Register
                </a>
              </li>
          <% } %>
        </ul>
      </div>
    </div>
  </nav>
  
  <!-- Flash Messages -->
  <div class="container-fluid mt-3">
    <% if (messages.success && messages.success.length > 0) { %>
      <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="bi bi-check-circle-fill me-2"></i> <%= messages.success %>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
      </div>
    <% } %>
    <% if (messages.error && messages.error.length > 0) { %>
      <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="bi bi-exclamation-triangle-fill me-2"></i> <%= messages.error %>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
      </div>
    <% } %>
  </div>
  
  <!-- Main Content Area -->
  <div class="container-fluid mt-3">